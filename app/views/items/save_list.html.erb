<h2 class="row container-fluid mt-4 p-4">Saved</h2>

  
<div class="row container-fluid">
  
  <% @items.each do |item| %>
    <% if in_saved_list? item %>
    <div class="col-6 p-1">
      <%= link_to item_path(item) do %>
        
      
          <div class="card h-100">
            <%= image_tag(item.primary_img, class:"card-img-top") %>
            <div class="card-body">
              <p class="card-text" style="white-space:normal"><%= item.name %></p>
              <p class="card-text"><%= number_to_currency  item.price %></p>
            </div>
          </div>
      <% end %>
        </div>
    <% end %>
  <% end %>
    
  <% if !@saved_list || @saved_list.empty? %>
    
    <div class="container"> 
      <h4>It's lonely here... </h4>
      <p class="lead">Go back to the <%= link_to  "homepage", root_path %> to save some products!</p>
    </div>
    
  <% end %>
  

</div>